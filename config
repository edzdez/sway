# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

### Autostart
exec dbus-update-activation-environment --all
exec gnome-keyring-daemon --start --components=secrets
exec export $(gnome-keyring-daemon)

exec /usr/libexec/polkit-mate-authentication-agent-1

exec dunst

exec nm-applet --indicator
exec blueman-applet

exec wl-paste -t text --watch clipman store --no-persist

exec wmname LG3D

### Style
default_border pixel 1
default_floating_border normal
font pango:JetbrainsMonoNerdFont Regular 10
title_align center

### Gruvbox
# class                 border  bground text    indicator child_border
client.focused          #504945 #504945 #ebdbb2 #98971a   #83a598
client.focused_inactive #504945 #3c3836 #ebdbb2 #928374   #3c3836
client.unfocused        #504945 #282828 #928374 #928374   #282828
client.urgent           #fadb2f #fadb2f #282828 #fadb2f   #fadb2f
client.placeholder      #282828 #282828 #ebdbb2 #282828   #282828
client.background       #282828

# gaps inner 4

### Variables
#
# Mod key. Use Mod1 for Alt.
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term alacritty
set $browser brave-browser --ozone-platform=wayland
set $fm nemo

set $lock swaylock -f

set $menu rofi -show drun -modes "drun,run"

### Output configuration
#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs

output * bg ~/.local/share/backgrounds/mountains-2.jpg fill
output "ASUSTek COMPUTER INC ASUS VG249 0x0001C233" resolution 1920x1080@120Hz
output "Shenzhen KTC Technology Group H27F22        Unknown" resolution 1920x1080@144Hz

bindswitch --locked lid:on output eDP-1 disable
bindswitch --locked lid:off output eDP-1 enable

### Idle configuration
#
# Example configuration:
#
# exec swayidle -w \
#          timeout 300 'swaylock -f -c 000000' \
#          timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
#          before-sleep 'swaylock -f -c 000000'
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.
exec swayidle -w \
         timeout 300 'swaylock -f' \
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f'

### Input configuration
#
# Example configuration:
#
#   input "2:14:SynPS/2_Synaptics_TouchPad" {
#       dwt enabled
#       tap enabled
#       natural_scroll enabled
#       middle_emulation enabled
#   }
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

input "1267:12693:ELAN0676:00_04F3:3195_Touchpad" {
    dwt enabled
    tap disabled
    natural_scroll enabled
    middle_emulation enabled
    click_method clickfinger
}

input "1133:50503:Logitech_USB_Receiver" {
    accel_profile "flat"
}

input "1133:45106:Logi_M650_L_B_Mouse" {
    accel_profile "flat"
}

input "1133:50504:Logitech_USB_Receiver_Mouse" {
    accel_profile "flat"
}

input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_layout us,us
    xkb_variant dvorak,dvorak-intl
    xkb_options caps:escape,grp:rctrl_toggle
}

input "44461:64352:KnoblesseOblige_Freebird60" {
    xkb_layout us,us
    xkb_variant ,intl
    xkb_options caps:escape,grp:rctrl_toggle
}

input "51984:5974:Keebio_Iris_LM-K_Rev._1" {
    xkb_layout us,us
    xkb_variant ,intl
    xkb_options grp:rwin_toggle
}

### Misc
focus_on_window_activation focus

# More reasonable floating windows
for_window [window_role = "pop-up"] floating enable
for_window [window_role = "bubble"] floating enable
for_window [window_role = "dialog"] floating enable
for_window [window_type = "dialog"] floating enable
for_window [window_role = "task_dialog"] floating enable
for_window [window_type = "menu"] floating enable
for_window [app_id = "floating"] floating enable
for_window [app_id = "floating_update"] floating enable, resize set width 1000px height 600px
for_window [class = "(?i)pinentry"] floating enable
for_window [title = "Administrator privileges required"] floating enable

for_window [shell="xwayland"] title_format "%title [XWayland]"

### Key bindings
#
# Basics:
#
    # Volume/Brightness Control
    bindsym --locked XF86AudioMute exec wpctl set-mute @DEFAULT_SINK@ toggle && $HOME/scripts/notify-volume.sh
    bindsym --locked XF86AudioLowerVolume exec wpctl set-volume --limit 1.0 @DEFAULT_SINK@ 5%- && ~/scripts/notify-volume.sh
    bindsym --locked XF86AudioRaiseVolume exec wpctl set-volume --limit 1.0 @DEFAULT_SINK@ 5%+ && ~/scripts/notify-volume.sh
    bindsym --locked XF86AudioMicMute exec wpctl set-mute @DEFAULT_SOURCE@ toggle && $HOME/scripts/notify-micmute.sh
    bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%- && $HOME/scripts/notify-backlight.sh
    bindsym --locked XF86MonBrightnessUp exec brightnessctl set +5% && $HOME/scripts/notify-backlight.sh

    # Toggle internal display
    bindsym --locked $mod+Mod1+d exec swaymsg output eDP-1 toggle

    # Start a terminal
    bindsym $mod+Return exec $term

    # Start a browser
    bindsym $mod+b exec $browser

    # Start a file manager
    bindsym $mod+f exec $fm

    # Start a launcher
    bindsym $mod+d exec $menu
    bindsym $mod+Shift+Tab exec rofi -show window

    # Start Zathura (tiled)
    bindsym $mod+z exec zathura
    bindsym $mod+Shift+z exec zathura "$(wl-paste)"

    # Reload the configuration file
    bindsym $mod+Mod1+r reload

    # Kill focused window
    bindsym $mod+Shift+q kill

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

    # Take a screenshot of the whole screen
    bindsym $mod+Mod1+Print exec grim - | wl-copy

    # Take a screenshot of part of the screen
    bindsym $mod+Print exec slurp | grim -g - - | wl-copy
    bindsym $mod+Shift+s exec slurp | grim -g - - | wl-copy

    #Take a screenshot of the active window
    bindsym $mod+Shift+Print exec swaymsg -t get_tree | jq -r '.. | select(.focused?) | .rect | "\(.x),\(.y) \(.width)x\(.height)"' | grim -g - | wl-copy

    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+Mod1+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

    # Lock screen
    bindsym $mod+i exec $lock

    # Toggle titlebars
    bindsym $mod+Mod1+b exec $HOME/scripts/toggle-borders.sh

    # Toggle bar
    bindsym $mod+Shift+b exec pkill -SIGUSR1 "^waybar$"

    # Toggle sticky
    bindsym $mod+Mod1+space sticky toggle

    # Mute mic
    bindsym Scroll_Lock exec wpctl set-mute @DEFAULT_SOURCE@ toggle && $HOME/scripts/notify-micmute.sh
    bindsym $mod+Shift+Escape exec wpctl set-mute @DEFAULT_SOURCE@ toggle && $HOME/scripts/notify-micmute.sh

    # Bookmarks
    # bindsym $mod+v exec $HOME/.local/bin/bookmark-locate.sh
    # bindsym $mod+c exec $HOME/.local/bin/bookmark-add.sh

    # Power profiles
    bindsym $mod+p exec $HOME/scripts/tuned-rofi
#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # Or use $mod+[up|down|left|right]
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Trigger sway-easyfocus
    bindsym $mod+Escape exec sway-easyfocus
    bindsym $mod+Mod1+Escape exec sway-easyfocus swap

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right

    # Ditto, with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right
#
# Workspaces:
#
    # Switch to workspace
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9

    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9

    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.
    # Switch to previous workspace
    bindsym $mod+Tab workspace back_and_forth
    bindsym $mod+Control+Shift+Right move workspace to output right
    bindsym $mod+Control+Shift+Left move workspace to output left
    bindsym $mod+Control+Shift+Down move workspace to output down
    bindsym $mod+Control+Shift+Up move workspace to output up
    bindsym $mod+Control+Shift+$right move workspace to output right
    bindsym $mod+Control+Shift+$left move workspace to output left
    bindsym $mod+Control+Shift+$down move workspace to output down
    bindsym $mod+Control+Shift+$up move workspace to output up
#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+Shift+e or $mod+Shift+o, for horizontal and vertical splits
    # respectively.
    bindsym $mod+Shift+e splith
    bindsym $mod+Shift+o splitv

    # Switch the current container between different layout styles
    bindsym $mod+Mod1+s layout stacking
    bindsym $mod+Mod1+z layout tabbed
    bindsym $mod+Mod1+t layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+Mod1+m fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space exec swaymsg floating toggle && $HOME/scripts/toggle-borders.sh

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show
#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

mode "open-dir" {
    bindsym c exec sel=$(ls -d ~/Documents/Courses/*/ | awk -F/ '{ print $(NF-1) }' | rofi -dmenu -i) && alacritty --working-directory "$HOME/Documents/Courses/$sel"; mode "default"
    bindsym Shift+c exec sel=$(ls -d ~/Documents/Courses/*/ | awk -F/ '{ print $(NF-1) }' | rofi -dmenu -i) && nemo "$HOME/Documents/Courses/$sel"; mode "default"
    bindsym b exec alacritty --working-directory $HOME/Documents/Books; mode "default"
    bindsym Shift+b exec nemo $HOME/Documents/Books; mode "default"
    bindsym g exec sel=$(ls -d $HOME/.config/*/ | awk -F/ '{ print $(NF-1) }' | rofi -dmenu -i) && alacritty --working-directory "$HOME/.config/$sel"; mode "default"
    bindsym r exec sel=$(ls $HOME/Documents/Books | rofi -dmenu -i) && zathura "$HOME/Documents/Books/$sel"; mode "default"

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+Return mode "open-dir"

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    swaybar_command waybar
    position bottom
}

include /etc/sway/config.d/*
